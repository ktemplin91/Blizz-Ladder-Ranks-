<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-color: black;
        }

        .my-2 {
            margin-top: .5rem !important;
            margin-bottom: .5rem !important;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Blizzard Stats", "Index", "Main", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!--Title page controller-->
                    <li>@Html.ActionLink("Home", "Index", "Main")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <div class="pull-right my-2">
                    <!-- Trigger the modal with a button -->
                    <button type="button" class="btn btn-primary btn-large" data-toggle="modal" data-target="#myModal">Sign In / Sign Up</button>
                    @Html.ActionLink("Sign in with Battle.net", "StarcraftRemastered", "Main", null, new { @class = "btn btn-primary btn-large" })
                    @Html.ActionLink("Battle.net", null, null, new { @class = "btn btn-primary btn-large", Href = "http://us.battle.net/en" })
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        <!--MODAL LOGIN-->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Modal Header</h4>
                    </div>
                    <div class="modal-body" id="LoginView">
                        @Html.Partial("Login")
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        <!--END OF MODAL LOGIN-->
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
